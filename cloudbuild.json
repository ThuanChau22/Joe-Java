{
  "steps": [
    {
      "name": "bash",
      "args": [
        "-c",
        "set | grep -E 'PORT|DB_NAME|DB_HOST|DB_USER|DB_PASS' > .env"
      ],
      "env": [
        "PORT=${_PORT}",
        "DB_NAME=${_DB_NAME}"
      ],
      "secretEnv": [
        "DB_HOST",
        "DB_USER",
        "DB_PASS"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/${_SERVICE_NAME}:$REVISION_ID",
        "."
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/${_SERVICE_NAME}:$REVISION_ID"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "args": [
        "run",
        "deploy",
        "${_SERVICE_NAME}",
        "--image",
        "gcr.io/$PROJECT_ID/${_SERVICE_NAME}:$REVISION_ID",
        "--region",
        "us-central1",
        "--allow-unauthenticated"
      ]
    }
  ],
  "images": [
    "gcr.io/$PROJECT_ID/${_SERVICE_NAME}:$REVISION_ID"
  ],
  "availableSecrets": {
    "secretManager": [
      {
        "versionName": "projects/$PROJECT_ID/secrets/DB_HOST/versions/latest",
        "env": "DB_HOST"
      },
      {
        "versionName": "projects/$PROJECT_ID/secrets/DB_USER/versions/latest",
        "env": "DB_USER"
      },
      {
        "versionName": "projects/$PROJECT_ID/secrets/DB_PASS/versions/latest",
        "env": "DB_PASS"
      }
    ]
  },
  "substitutions": {
    "_SERVICE_NAME": "<service_name>",
    "_PORT": "<port_number>",
    "_DB_NAME": "<database_name>"
  }
}