Options +FollowSymLinks

# inherit rules from httpd.conf
RewriteOptions Inherit

# Disable directory browsing
Options All -Indexes

# Prevent folder listing
IndexIgnore *

# Default index file
DirectoryIndex src/index.php

# Truncate file path and extension
RewriteEngine On
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^products/([a-zA-Z0-9]+)$ /src/pages/item.php?id=$1 [NC,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ /src/pages/$1.php [NC,L]

# 404 Not Found
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*)$ /src/pages/404.php [NC,L]

<FilesMatch "^\.|cloudbuild|composer*|docker*|readme.md|.*.txt$">
  Deny from all
</FilesMatch>